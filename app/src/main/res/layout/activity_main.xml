<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amrita.cse.amuda.amqp.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/xCoordinate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:hint="X Coordinate"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/publish" />

    <EditText
        android:id="@+id/yCoordinate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:hint="Y Coordinate"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/xCoordinate" />

    <Button
        android:id="@+id/publish"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="Scan"
        app:layout_constraintTop_toBottomOf="@id/yCoordinate"
        tools:layout_constraintTop_toBottomOf="@id/xCoordinate" />

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/publish">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Received Message"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="-72dp" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>
